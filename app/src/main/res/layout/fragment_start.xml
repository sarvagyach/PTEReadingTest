    -<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:id="@+id/layout_start">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorTextBackground"
        android:id="@+id/text_view_middle"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="60sp"
        android:fontFamily="@font/metropolis_bold"
        android:text="Reading"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorTextBackground"
        android:id="@+id/text_view_top"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="50sp"
        android:fontFamily="@font/metropolis_bold"
        android:text="PTE"
        android:drawableTop="@drawable/icon"
        app:layout_constraintBottom_toTopOf="@id/text_view_middle"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorTextBackground"
        android:id="@+id/text_view_bottom"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="50sp"
        android:fontFamily="@font/metropolis_bold"
        android:text="TEST"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/text_view_middle"/>

</androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/background"
        android:id="@+id/layout_run"
        android:visibility="gone">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:id="@+id/text_view_header"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:fontFamily="@font/metropolis_bold"
        android:text="PTE Academic Reading Test"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/icon"
        android:padding="20dp"/>


    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_header"
        android:paddingTop="80dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorTxBackground"
        android:id="@+id/text_view_one"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:fontFamily="@font/metropolis_semibold"
        android:text="Multiple Choice Choose Single Answer"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/one"
        android:padding="20dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorTxBackground"
        android:id="@+id/text_view_two"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:fontFamily="@font/metropolis_semibold"
        android:text="Multiple Choice Choose Multiple Answers"
        app:layout_constraintTop_toBottomOf="@id/text_view_one"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/two"
        android:padding="20dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorTxBackground"
        android:id="@+id/text_view_three"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:fontFamily="@font/metropolis_semibold"
        android:text="Reorder Paragraph"
        app:layout_constraintTop_toBottomOf="@id/text_view_two"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/three"
        android:padding="20dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorTxBackground"
        android:id="@+id/text_view_four"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:fontFamily="@font/metropolis_semibold"
        android:text="Reading: Fill in the blanks"
        app:layout_constraintTop_toBottomOf="@id/text_view_three"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/four"
        android:padding="20dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorTxBackground"
        android:id="@+id/text_view_five"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:fontFamily="@font/metropolis_semibold"
        android:text="Reading &amp; Writing: Fill in the blanks "
        app:layout_constraintTop_toBottomOf="@id/text_view_four"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/five"
        android:padding="20dp"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>